<div class="container">
	<div class="row">
		<div class="col">
			{{#each dbArticles}}
			<div class="row bg-red rounded">
				<h3 class="mx-auto">
					<a class="white" href={{link}}>{{title}}</a>
				</h3>
			</div>
			<div class="row">
				<p class="lead">{{summary}}</p>
			</div>
			<div class="row" id="comment-section">
				{{> comments/prior-comments-block}}
			</div>
				{{> comments/add-comment-block }}
			{{/each}}
		</div>
	</div>
</div>